# LexAI Configuration - Hedge Fund Edition
# Copy this file to .env and fill in your values

# =============================================================================
# LLM SETTINGS
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_MODEL=gpt-4o
LLM_PROVIDER=openai
USE_MOCK_LLM=true  # Set to false when API keys are configured

# =============================================================================
# DATA SOURCE APIs
# =============================================================================
# CourtListener (free.law) - Get API key at https://www.courtlistener.com/help/api/
COURTLISTENER_API_KEY=your-courtlistener-api-key

# SEC EDGAR - No API key needed, but must provide valid user agent
SEC_EDGAR_USER_AGENT=YourFund contact@yourfund.com

# PACER (optional, for trial court documents)
PACER_USERNAME=
PACER_PASSWORD=

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL (production)
POSTGRES_URL=postgresql://lexai:lexai@localhost:5432/lexai

# Redis (caching)
REDIS_URL=redis://localhost:6379

# Neo4j (citation graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Vector DB
QDRANT_HOST=localhost
QDRANT_PORT=6333
USE_MOCK_VECTOR_DB=false

# =============================================================================
# TRADING SETTINGS
# =============================================================================
BROKER=interactive_brokers
PAPER_TRADING=true
MAX_POSITION_PCT=0.05

# =============================================================================
# SERVER SETTINGS
# =============================================================================
DEBUG=true
HOST=0.0.0.0
PORT=8000
